script(type="text/x-template")#slider-container
    .slider
        display(
            :works="works",
            :currentWork="currentWork"
            :currentIndex="currentIndex"
            @slide="handleSlide"
        )
        info(
            :currentWork="currentWork"
        )
        //-отображение самого слайдера 

script(type="text/x-template")#slider-display
    .works-slider__pics(:data-slide="currentIndex + 1")
        .works-slider__pics-content
            .works-slider__fullpic-container
                img(:src="currentWork.photo", alt="", class="works-slider__fullpic")
                btns(
                    @slide="$emit('slide', $event)"
                )
                thumbs(
                    :works="reversedWorks"
                    :currentWork="currentWork"
                )
                //-отображение большой картинки

script(type="text/x-template")#slider-thumbs
    ul.works-slider__thumbs
        li.works-slider__thumb-item(
            v-for="work in works"
            :class="{active: work.id === currentWork.id}"
        )         
            a.works-slider__thumb-link
                img(:src="work.photo", alt="", class="works-slider__thumb")
    //-отображение превью сайта

script(type="text/x-template")#slider-btns
    .works-slider__buttons
        a(@click.prevent="$emit('slide', 'next')").works-slider__btn.works-slider__btn_next
        a(@click.prevent="$emit('slide', 'next')" href="#").works-slider__btn.works-slider__btn_prev
        //-кнопки

script(type="text/x-template")#slider-info
    .works-slider__data
        tags(
            :tags="tagsArray"
        )
        .works-slider__title {{currentWork.title}}
        .works-slider__desc
            p {{currentWork.desc}}
        .works-slider__link 
            a(:href="currentWork.link").iconed-link Посмотреть сайт
    //-блок с описанием

script(type="text/x-template")#slider-tags
    ul.works-slider__tags
        li.works-slider__tag-item(v-for="tag in tagsArray")
            .tag {{tag}}

    //-тэги