.scroll-btn {
    position: relative;
    opacity: 0.4;
    color: $white;
    font-family: "Open Sans";
    font-size: 18px;
    font-weight: 500;
    line-height: 30px;
    text-align: right;
    text-decoration: none;
    transition: $transition;
    &:hover {
        color: $active;
        opacity: 1;
    }
}

.scroll-btn:hover .scroll-icn {
    fill: $active;
    opacity: 1;
}

.scroll-icn {
    width: 27.2px;
    height: 30px;
    fill: $white;
    opacity: 0.4;
    position: absolute;
}